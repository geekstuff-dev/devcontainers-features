{
    "name": "Terraform",
    "id": "terraform",
    "version": "0.2.1",
    "description": "Installs and setup Terraform and Tfswitch",
    "documentationURL": "https://gitlab.com/geekstuff.dev/devcontainers/features/terraform/-/blob/v0.2.1/README.md",
    "licenseURL": "https://gitlab.com/geekstuff.dev/devcontainers/features/terraform/-/blob/v0.2.1/LICENSE",
    "installsAfter": ["ghcr.io/geekstuff-dev/devcontainers-features/basics"],
    "options": {
        "version": {
            "type": "string",
            "default": "latest",
            "description": "Select or enter a terraform version"
        },
        "tfswitch_version": {
            "type": "string",
            "default": "1.2.3",
            "description": "Select or enter a terraform version"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "emeraldwalk.runonsave",
                "hashicorp.terraform"
            ],
            "settings": {
                "[terraform]": {
					"editor.detectIndentation": false,
					"editor.insertSpaces": true,
					"editor.tabSize": 2
				},
                "emeraldwalk.runonsave": {
                    "commands": [
                        {
                            "match": "\\.tf$",
                            "isAsync": true,
                            "cmd": "terraform fmt ${fileDirname}"
                        }
                    ]
                }
            }
        }
    },
    "containerEnv": {
        "DEV_LIB_TERRAFORM": "/devcontainer/terraform"
    }
}
