{
    "name": "Basics",
    "id": "basics",
    "version": "1.0.4",
    "description": "Creates a dev linux user, add basic packages, vscode requirements and minimal functionality",
    "documentationURL": "https://gitlab.com/geekstuff.dev/devcontainers/features/basics/-/blob/v1.0.4/README.md",
    "licenseURL": "https://gitlab.com/geekstuff.dev/devcontainers/features/basics/-/blob/v1.0.4/LICENSE",
    "options": {
        "buildtime_http_proxy": {
            "type": "string",
            "default": "",
            "description": "An HTTP_PROXY to use during build time"
        },
        "buildtime_https_proxy": {
            "type": "string",
            "default": "",
            "description": "An HTTPS_PROXY to use during build time"
        },
        "buildtime_no_proxy": {
            "type": "string",
            "default": "",
            "description": "A NO_PROXY list to use during build time"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "streetsidesoftware.code-spell-checker",
                "yzhang.markdown-all-in-one"
            ],
            "settings": {
                "[json]": {
					"editor.detectIndentation": false,
					"editor.insertSpaces": false,
					"editor.tabSize": 4
				},
                "[jsonc]": {
					"editor.detectIndentation": false,
					"editor.insertSpaces": false,
					"editor.tabSize": 4
				},
                "[makefile]": {
					"editor.detectIndentation": false,
					"editor.insertSpaces": false,
					"editor.tabSize": 4
				},
                "[markdown]": {
					"editor.detectIndentation": false,
					"editor.insertSpaces": true,
					"editor.tabSize": 4
				},
                "[yaml]": {
					"editor.detectIndentation": false,
					"editor.insertSpaces": true,
					"editor.tabSize": 2
				},
                "cSpell.ignorePaths": [
                    "*.code-workspace",
					"*.env",
					"*.envrc",
                    "*.json",
                    "*.vscode",
                    "*.yaml",
                    "*.yml"
                ],
                "dev.containers.dockerCredentialHelper": false,
				"editor.rulers": [
					{"column": 80, "color": "#d8db1f32"},
					{"column": 100, "color": "#ff00003b"}
				],
                "files.autoSave": "afterDelay",
				"files.autoSaveDelay": 5000,
                "files.eol": "\n",
				"json.schemas": [
					{
						"fileMatch": ["devcontainer-feature.json"],
						"url": "https://raw.githubusercontent.com/devcontainers/spec/main/schemas/devContainerFeature.schema.json"
					}
				],
                "remote.autoForwardPorts": false,
				"remote.forwardOnOpen": false,
				"remote.restoreForwardedPorts": false,
                "terminal.integrated.profiles.linux": {
                    "bash": {"path": "bash", "args": ["-l"]}
                },
                "terminal.integrated.defaultProfile.linux": "bash"
            }
        }
    },
    "containerEnv": {
		"CONTAINER_WORKSPACE_FOLDER": "${containerWorkspaceFolder}",
		"HOST_WORKSPACE_FOLDER": "${localWorkspaceFolder}",
        "LIB_DEVCONTAINER": "/lib/devcontainer",
        "LIB_DEVCONTAINER_FEATURES": "/lib/devcontainer/features",
		"MAKEFLAGS": "--no-print-directory"
	}
}
